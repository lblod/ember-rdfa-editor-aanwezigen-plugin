{{#if aanwezigenBijAgendapunt}}
<ul class="bullet-list">
  {{#if voorzitter}}
    <li>
      <span property="besluit:heeftVoorzitter" resource={{voorzitter.uri}}>{{voorzitter.fullName}} (voorzitter)</span>
    </li>
  {{/if}}
  {{#if secretaris}}
    <li>
      <span property="besluit:heeftSecretaris" resource={{secretaris.uri}}>{{secretaris.fullName}} (secretaris)</span>
    </li>
  {{/if}}
  <li>
    {{#each sortedAanwezigen as |aanwezige|}}
      <span property={{propertyToUse}} resource={{aanwezige.uri}}>{{aanwezige.fullName}}</span>, &nbsp;
    {{/each}}
  </li>
</ul>
{{else}}
  <ul class="bullet-list">
    {{#if voorzitter}}
      <li>
        <span property="besluit:heeftVoorzitter" resource={{voorzitter.uri}}>{{voorzitter.fullName}} (voorzitter)</span>
      </li>
    {{/if}}
    {{#if secretaris}}
      <li>
        <span property="besluit:heeftSecretaris" resource={{secretaris.uri}}>{{secretaris.fullName}} (secretaris)</span>
      </li>
    {{/if}}
    <li>
      {{#each sortedAanwezigen as |aanwezige|}}
        <span property={{propertyToUse}} resource={{aanwezige.uri}}>{{aanwezige.fullName}}</span>, &nbsp;
    {{/each}}
    </li>
  </ul>
{{/if}}
